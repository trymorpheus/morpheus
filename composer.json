{
    "name": "dynamiccrud/dynamiccrud",
    "description": "PHP library for generating dynamic CRUD forms with automatic validation based on database structure",
    "type": "library",
    "keywords": ["crud", "forms", "mysql", "validation", "pdo", "dynamic", "generator"],
    "homepage": "https://github.com/mcarbonell/DynamicCRUD",
    "license": "MIT",
    "authors": [
        {
            "name": "Mario Raúl Carbonell Martínez",
            "role": "Creator and Project Lead"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-fileinfo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "DynamicCRUD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DynamicCRUD\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
